.container {
  padding: 30rpx;
  background-color: #f6f6f6;
  min-height: 100vh;
}

.section {
  background: #fff;
  border-radius: 12rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: center;
}

.avatar-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-btn {
  padding: 0;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  position: relative;
  overflow: hidden;
  background: none;
}

.avatar-btn::after {
  border: none;
}

.avatar {
  width: 100%;
  height: 100%;
}

.edit-icon {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0,0,0,0.5);
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  padding: 4rpx 0;
}

.tip {
  margin-top: 20rpx;
  color: #999;
  font-size: 24rpx;
}

.form-group {
  background: #fff;
  border-radius: 12rpx;
  padding: 0 30rpx;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  width: 160rpx;
  color: #333;
  font-size: 28rpx;
}

.input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.btn-area {
  margin-top: 60rpx;
}

.save-btn {
  background: #2c2c2c;
  color: #fff;
  border-radius: 44rpx;
}