page {
  background-color: #f6f6f6;
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  box-sizing: border-box;
  align-items: stretch; /* Fix: Override app.wxss align-items: center */
  padding: 0; /* Fix: Override app.wxss padding */
}

/* Search Bar - 优化设计 */
.search-bar {
  width: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
  display: flex;
  align-items: center;
  position: sticky;
  top: 0;
  z-index: 100;
  box-sizing: border-box;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

.search-input-wrap {
  flex: 1;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 48rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  margin-right: 16rpx;
  transition: all 0.3s;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.search-input-wrap:active {
  background: #fff;
  transform: scale(0.98);
}

.search-input-wrap icon {
  margin-right: 12rpx;
  opacity: 0.6;
}

.search-input-wrap input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.search-btn {
  font-size: 28rpx;
  color: #fff;
  padding: 8rpx 20rpx;
  font-weight: 600;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 36rpx;
  backdrop-filter: blur(10rpx);
}

/* Filters - 优化设计 */
.filters {
  width: 100%;
  background: #fff;
  display: flex;
  border-bottom: 1rpx solid #f0f0f0;
  height: 88rpx;
  align-items: stretch;
  z-index: 99;
  box-sizing: border-box;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
  position: sticky;
  top: 112rpx;
}

.filters picker {
  flex: 1;
  height: 100%;
  min-width: 0; /* Allow shrinking */
  /* Fix: Ensure picker content is centered and fills height */
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.filters .filter-item {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 8rpx;
  box-sizing: border-box;
  text-align: center;
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  transition: all 0.2s;
}

/* Direct filter item (Class Input) needs flex: 1 like picker */
.filters > .filter-item {
    flex: 1;
    min-width: 0;
}

/* Reset button should take less space */
.filters > .filter-item.reset {
    flex: 0 0 auto;
    width: auto;
    padding: 0 24rpx;
    color: #666;
    font-size: 13px;
}

.filter-item text:first-child {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 90%; /* Increased from 85% */
    display: block; /* Ensure it behaves as a block for overflow */
    font-weight: 500;
}

.filter-item.active {
  color: #667eea;
  font-weight: 600;
  background: linear-gradient(to bottom, rgba(102, 126, 234, 0.05), rgba(102, 126, 234, 0.08));
}

.arrow {
  font-size: 10px;
  margin-left: 4px;
  color: #bbb;
  flex-shrink: 0;
}

.filter-item.reset {
    color: #666;
    font-size: 13px;
    border-left: 1rpx solid #f0f0f0;
    max-width: 60px;
    flex: none;
    width: 60px;
    background: #fafafa;
}

.filter-item.reset text {
    max-width: 100%;
}

/* Modal for Class Input */
.class-modal-input {
    border: 1px solid #ddd;
    padding: 8px;
    border-radius: 4px;
    margin-top: 10px;
}

/* List */
.student-list {
  flex: 1;
  padding: 12px;
  box-sizing: border-box;
  overflow-y: hidden; /* handled by scroll-view */
}

.student-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 28rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.06);
  transition: all 0.2s;
  border: 2rpx solid transparent;
}

.student-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.12);
  border-color: rgba(102, 126, 234, 0.2);
}

.card-left {
  margin-right: 24rpx;
  position: relative;
}

.card-left::after {
  content: '';
  position: absolute;
  bottom: 0;
  right: 0;
  width: 24rpx;
  height: 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  border: 3rpx solid #fff;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: 3rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.15);
}

.card-right {
    flex: 1;
    min-width: 0; /* Enable flex item truncation */
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 6px;
}

.student-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #222;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-right: 12rpx;
  letter-spacing: 0.5rpx;
}

.student-class.tag {
  font-size: 22rpx;
  color: #fff;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 600;
  flex-shrink: 0;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

.card-info {
  font-size: 24rpx;
  color: #666;
  line-height: 1.8;
  margin-top: 8rpx;
}

.info-item {
  margin-bottom: 4rpx;
  display: flex;
  align-items: center;
}

.info-item .label {
  color: #999;
  margin-right: 8rpx;
  min-width: 64rpx;
  font-weight: 500;
}

.empty-tip, .loading-tip, .no-more-tip {
  text-align: center;
  padding: 20px;
  color: #999;
  font-size: 14px;
}

.empty-tip image {
    opacity: 0.5;
}


/* Author Modal Styles (Reused) */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

.author-modal {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 85%;
  background: #fff;
  border-radius: 12px;
  z-index: 1001;
  overflow: hidden;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.modal-content {
  display: flex;
  flex-direction: column;
  max-height: 100%;
}

.modal-header {
  padding: 20px;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  position: relative;
}

.modal-avatar {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  margin-right: 15px;
}

.modal-user-info {
  flex: 1;
}

.modal-user-name {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  margin-bottom: 4px;
}

.modal-user-role {
  display: flex;
  gap: 8px;
}

.role-tag, .class-tag {
  font-size: 11px;
  padding: 2px 6px;
  border-radius: 4px;
}

.role-tag {
  background: #f0f0f0;
  color: #666;
}

.class-tag {
  background: #e6f7ff;
  color: #1890ff;
}

.close-btn {
  position: absolute;
  top: 10px;
  right: 15px;
  font-size: 24px;
  color: #999;
  line-height: 1;
  padding: 5px;
}

.modal-body {
  padding: 20px;
  overflow-y: auto;
}

.info-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.info-row {
  display: flex;
  flex-direction: column;
}

.info-label {
  font-size: 12px;
  color: #999;
  margin-bottom: 2px;
}

.info-value {
  font-size: 14px;
  color: #333;
}

.modal-footer {
  padding: 15px 20px;
  border-top: 1rpx solid #eee;
}

.action-btn {
  background: #1296db;
  color: #fff;
  border-radius: 20px;
  font-size: 14px;
  width: 100%;
}
