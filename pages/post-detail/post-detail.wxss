/* Clean list layout override */
page {
  background: #fff; /* White background for clean look */
}

.container {
  padding-bottom: 120rpx;
}

/* Post Content Section - Flat Design */
.card {
  background: #fff;
  margin: 0;
  padding: 30rpx;
  border-radius: 0;
  box-shadow: none;
  border-bottom: 10rpx solid #f5f5f5; /* Separator between post and comments */
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.header-left {
  display: flex;
  align-items: center;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background: #eee;
}

.user-info {
  display: flex;
  flex-direction: column;
}

.username {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.time {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

.header-right {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.post-edit, .post-delete {
  font-size: 24rpx;
  color: #576b95;
  padding: 10rpx;
}

.share-btn {
  margin: 0 !important;
  font-weight: normal;
}

.card-content {
  margin-bottom: 20rpx;
}

.category-tag {
  color: #1296db;
  margin-right: 10rpx;
  font-weight: 500;
}

.content-text {
  font-size: 32rpx; /* Slightly larger for readability */
  color: #333;
  line-height: 1.6;
}

.link-text {
  color: #1296db;
  text-decoration: underline;
}

.card-images {
  margin-bottom: 20rpx;
}

.post-image {
  border-radius: 8rpx;
  width: 100%;
  max-height: 500rpx;
  object-fit: cover;
  margin-bottom: 10rpx;
}

.image-grid {
  display: grid;
  gap: 10rpx;
}

.grid-1 { grid-template-columns: 1fr; }
.grid-2 { grid-template-columns: 1fr 1fr; }
.grid-3 { grid-template-columns: 1fr 1fr 1fr; }

.card-footer {
  display: flex;
  justify-content: flex-end;
  padding-top: 20rpx;
}

.action-item {
  display: flex;
  align-items: center;
  margin-left: 40rpx;
}

.action-text {
  font-size: 26rpx;
  color: #666;
}

.action-text.liked {
  color: #1296db;
  font-weight: 600;
}

/* Comments Section - Clean List */
.comments-section {
  padding: 0 30rpx;
  margin-top: 0;
  background: #fff;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin: 30rpx 0 20rpx;
  padding-left: 0;
  border-left: none;
}

.comments-list {
  padding-bottom: 20rpx;
}

.comment-item {
  display: flex;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.comment-item:last-child {
  border-bottom: none;
}

.comment-avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  flex-shrink: 0;
  background: #eee;
}

.comment-content-wrapper {
  flex: 1;
}

.comment-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 6rpx;
}

.comment-author {
  font-size: 28rpx;
  color: #555;
  font-weight: 600;
}

.comment-time {
  font-size: 22rpx;
  color: #ccc;
}

.comment-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  margin-top: 4rpx;
}

.comment-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 10rpx;
}

.delete-btn {
  font-size: 22rpx;
  color: #999;
  padding: 10rpx;
}

/* Bottom Bar */
.comment-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
  display: flex;
  align-items: center;
  z-index: 100;
}

.comment-input {
  flex: 1;
  background: #f5f5f5;
  height: 72rpx;
  border-radius: 36rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.no-comments {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 26rpx;
}

.loading-comments {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 24rpx;
}
