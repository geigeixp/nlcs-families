@import "../../app.wxss";

page {
  background: #f6f6f6;
  padding-bottom: 40rpx;
}

/* Fixed Header Styles */
.fixed-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.header-spacer {
  height: 240rpx; /* Adjust based on header height */
}

/* Feed Topbar */
.feed-topbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff;
}

.feed-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.feed-post-btn {
  background: #1296db;
  color: #fff;
  font-size: 26rpx;
  padding: 0 30rpx;
  height: 56rpx;
  line-height: 56rpx;
  border-radius: 28rpx;
  margin: 0;
}

/* Filters Area */
.feed-filters {
  background: #fff;
  padding-bottom: 10rpx;
}

.search-bar {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  margin: 0 30rpx 20rpx;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  height: 64rpx;
  box-sizing: border-box;
}

.search-input {
  flex: 1;
  font-size: 26rpx;
  margin-left: 10rpx;
}

.category-scroll {
  white-space: nowrap;
  margin-bottom: 20rpx;
  padding-left: 30rpx;
}

.category-row {
  display: flex;
  padding-right: 30rpx;
}

.pill {
  padding: 8rpx 24rpx;
  background: #f5f5f5;
  color: #666;
  font-size: 26rpx;
  border-radius: 28rpx;
  margin-right: 16rpx;
  transition: all 0.2s;
}

.pill.active {
  background: #e6f7ff;
  color: #1296db;
  font-weight: 500;
}

.filter-row {
  display: flex;
  padding: 0 30rpx;
  gap: 16rpx;
}

.pill.small {
  padding: 6rpx 20rpx;
  font-size: 24rpx;
}

/* Feed List */
.feed-container {
  min-height: 100vh;
}

.card {
  background: #fff;
  margin: 20rpx 30rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.03);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.header-left {
  display: flex;
  align-items: center;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background: #eee;
}

.user-info {
  display: flex;
  flex-direction: column;
}

.username {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.time {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

.header-right {
  display: flex;
  gap: 20rpx;
}

.post-edit, .post-delete {
  font-size: 24rpx;
  color: #576b95;
  padding: 10rpx;
}

.card-content {
  margin-bottom: 20rpx;
}

.category-tag {
  color: #1296db;
  margin-right: 10rpx;
  font-weight: 500;
}

.content-text {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
}

.link-text {
  color: #576b95;
  text-decoration: underline;
  word-break: break-all;
}

.highlight-text {
  background-color: #fff3bf; /* Yellow highlight background */
  color: #333;
  font-weight: bold;
  border-radius: 4rpx;
  padding: 0 2rpx;
}

/* Image Grid */
.card-images {
  margin-bottom: 20rpx;
}

.image-grid {
  display: grid;
  gap: 10rpx;
}

.grid-1 { grid-template-columns: 1fr; }
.grid-2 { grid-template-columns: 1fr 1fr; }
.grid-3 { grid-template-columns: repeat(3, 1fr); }

.post-image {
  border-radius: 8rpx;
  width: 100%;
  height: 220rpx; /* Default height for grid items */
  object-fit: cover;
}

.grid-1 .post-image {
  height: 400rpx; /* Larger height for single image */
  width: 70%; /* Not full width for single image usually */
}

.card-footer {
  display: flex;
  justify-content: flex-end;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.action-item {
  display: flex;
  align-items: center;
  margin-left: 24rpx;
}

.action-text {
  font-size: 26rpx;
  color: #666;
  white-space: nowrap;
}

.action-text.liked {
  color: #1296db;
  font-weight: 600;
}

.loading-tip {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 24rpx;
}

.gated-tip {
  background: #fff3bf;
  color: #7a5d00;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.gated-btn {
  background: #fff;
  color: #7a5d00;
  border: 1rpx solid #7a5d00;
  margin: 0;
  font-size: 24rpx;
}

/* Match Comments */
.match-comments {
  background: #f9f9f9;
  padding: 16rpx;
  border-radius: 8rpx;
  margin-top: 20rpx;
}

.match-comment-item {
  font-size: 26rpx;
  margin-bottom: 8rpx;
  color: #666;
}

.match-comment-item:last-child {
  margin-bottom: 0;
}

.match-label {
  color: #999;
}

.match-author {
  color: #576b95;
  font-weight: 500;
}

.match-content {
  color: #333;
}

/* Author Modal */
.author-modal {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  background: #fff;
  border-radius: 20rpx;
  z-index: 1000;
  overflow: hidden;
}

.author-card {
  width: 100%;
}

.author-card-header {
  background: #e6f7ff;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.author-card-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  border: 4rpx solid #fff;
}

.author-card-main {
  text-align: center;
}

.author-card-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.author-card-class {
  display: inline-block;
  background: #1296db;
  color: #fff;
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.author-card-body {
  padding: 30rpx 40rpx;
  min-height: 200rpx;
}

.info-row {
  display: flex;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.info-label {
  color: #999;
  width: 140rpx;
  flex-shrink: 0;
}

.info-value {
  color: #333;
  flex: 1;
}

.info-empty {
  text-align: center;
  color: #999;
  padding: 40rpx 0;
}

.loading-view, .error-view {
  text-align: center;
  color: #999;
  padding: 40rpx 0;
}

.author-card-footer {
  border-top: 1rpx solid #f0f0f0;
  padding: 24rpx 0;
  text-align: center;
  font-size: 30rpx;
  color: #576b95;
  font-weight: 500;
}

.share-wrapper {
  margin-left: 24rpx;
}

.share-btn-inline {
  background: transparent;
  padding: 0;
  margin: 0;
  line-height: 1.2;
  font-size: 26rpx;
  color: #666;
  border: none;
}

.share-btn-inline::after {
  border: none;
}
