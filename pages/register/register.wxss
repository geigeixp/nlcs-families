.container {
  padding: 24rpx;
  background: #f6f6f6;
  min-height: 100vh;
  box-sizing: border-box;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 28rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 32rpx;
  color: #222;
  font-weight: 600;
  margin-bottom: 18rpx;
}

.hint {
  font-size: 24rpx;
  color: #888;
  margin-top: -10rpx;
  margin-bottom: 18rpx;
}

.field {
  margin-bottom: 22rpx;
}

.label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.input {
  background: #f7f7f7;
  border-radius: 12rpx;
  padding: 18rpx 18rpx;
  font-size: 30rpx;
  color: #333;
}

.picker {
  background: #f7f7f7;
  border-radius: 12rpx;
  padding: 18rpx 18rpx;
  font-size: 30rpx;
  color: #333;
}

.image-row {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.add-box {
  width: 220rpx;
  height: 220rpx;
  background: #f7f7f7;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.plus {
  font-size: 70rpx;
  color: #cfcfcf;
  line-height: 1;
}

.add-text {
  font-size: 24rpx;
  color: #999;
  margin-top: 6rpx;
}

.image-box {
  position: relative;
  width: 220rpx;
  height: 220rpx;
  border-radius: 12rpx;
  overflow: hidden;
  background: #f0f0f0;
}

.image {
  width: 100%;
  height: 100%;
}

.remove {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 44rpx;
  height: 44rpx;
  border-radius: 22rpx;
  background: rgba(0, 0, 0, 0.55);
  color: #fff;
  text-align: center;
  line-height: 42rpx;
  font-size: 32rpx;
}

.footer {
  padding: 10rpx 30rpx 40rpx;
}

.primary {
  background: #1296db;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
}

.ghost {
  margin-top: 18rpx;
  background: #fff;
  color: #1296db;
  border-radius: 44rpx;
  font-size: 30rpx;
}

