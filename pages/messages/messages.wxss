.container {
  padding: 0;
  min-height: 100vh;
  background: #f6f6f6;
}

.msg-card {
  background: #fff;
  padding: 24rpx 30rpx;
  display: flex;
  align-items: flex-start;
  border-bottom: 1rpx solid #f0f0f0;
}

.msg-card:active {
  background: #f9f9f9;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #eee;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.msg-content {
  flex: 1;
  margin-right: 20rpx;
  min-width: 0;
}

.msg-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.author {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.msg-detail {
  font-size: 28rpx;
  color: #555;
  line-height: 1.4;
}

.action {
  color: #666;
}

.comment-text {
  color: #333;
}

.post-preview {
  width: 120rpx;
  height: 120rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  overflow: hidden;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.preview-img {
  width: 100%;
  height: 100%;
}

.preview-text {
  font-size: 20rpx;
  color: #999;
  padding: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  overflow: hidden;
  line-height: 1.3;
}

.empty {
  text-align: center;
  color: #999;
  padding: 100rpx 0;
  font-size: 28rpx;
}

.loading, .no-more {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
}
