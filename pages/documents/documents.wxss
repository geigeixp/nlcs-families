.container {
  padding: 30rpx;
  background-color: #f6f6f6;
  min-height: 100vh;
  padding-bottom: 120rpx; /* 为悬浮按钮留出空间 */
}

.header {
  margin-bottom: 30rpx;
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.subtitle {
  font-size: 26rpx;
  color: #999;
  margin-top: 10rpx;
}

.search-bar {
  width: 100%;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

.search-wrap {
  flex: 1;
  background-color: #fff;
  border-radius: 36rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  border: 1rpx solid #eee;
  box-sizing: border-box;
  transition: all 0.3s;
}

.search-input {
  flex: 1;
  margin: 0 10rpx;
  font-size: 28rpx;
  color: #333;
}

/* 网格卡片布局 */
.doc-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.doc-item {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.06);
  transition: transform 0.2s, box-shadow 0.2s;
  display: flex;
  flex-direction: column;
}

.doc-item:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.12);
}

/* 网格卡片中的大图标区域 */
.doc-icon {
  width: 100%;
  height: 240rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

/* 文件类型图标 */
.doc-icon::after {
  content: 'FILE';
  font-size: 48rpx;
  color: rgba(255,255,255,0.9);
  font-weight: bold;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.2);
}

.doc-icon.pdf {
  background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
}
.doc-icon.pdf::after { content: 'PDF'; }

.doc-icon.word {
  background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
}
.doc-icon.word::after { content: 'DOC'; }

.doc-icon.excel {
  background: linear-gradient(135deg, #27ae60 0%, #229954 100%);
}
.doc-icon.excel::after { content: 'XLS'; }

.doc-icon.ppt {
  background: linear-gradient(135deg, #e67e22 0%, #d35400 100%);
}
.doc-icon.ppt::after { content: 'PPT'; }

.doc-icon.image {
  background: linear-gradient(135deg, #9b59b6 0%, #8e44ad 100%);
}
.doc-icon.image::after { content: 'IMG'; }

.doc-icon.video {
  background: linear-gradient(135deg, #e91e63 0%, #c2185b 100%);
}
.doc-icon.video::after { content: 'VIDEO'; font-size: 32rpx; }

.doc-icon.audio {
  background: linear-gradient(135deg, #00bcd4 0%, #0097a7 100%);
}
.doc-icon.audio::after { content: 'AUDIO'; font-size: 32rpx; }

.doc-icon.other {
  background: linear-gradient(135deg, #607d8b 0%, #455a64 100%);
}
.doc-icon.other::after { content: 'FILE'; }

.doc-info {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  flex: 1;
}

.doc-title {
  font-size: 26rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 8rpx;
  line-height: 1.4;
  height: 72rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.doc-date {
  font-size: 22rpx;
  color: #999;
  margin-top: auto;
}

.doc-action {
  display: flex;
  gap: 8rpx;
  padding: 0 20rpx 20rpx;
  margin-top: -8rpx;
}

.action-btn {
  flex: 1;
  padding: 12rpx 16rpx;
  font-size: 22rpx;
  border-radius: 8rpx;
  text-align: center;
  font-weight: 500;
}

.rename-btn {
  background-color: #e3f2fd;
  color: #1976d2;
}

.delete-btn {
  background-color: #ffebee;
  color: #d32f2f;
}

.empty {
  padding: 60rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

/* 悬浮上传按钮 - 优化样式 */
.fab-btn {
  position: fixed;
  bottom: 100rpx;
  right: 40rpx;
  width: 112rpx;
  height: 112rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
  transition: transform 0.2s;
  z-index: 10;
}

.fab-btn:active {
  transform: scale(0.95);
}

.plus {
  color: #fff;
  font-size: 64rpx;
  font-weight: 200;
  margin-top: -8rpx;
}