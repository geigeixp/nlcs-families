.feed-container {
  padding: 20rpx;
  padding-bottom: 50rpx;
}

.card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  justify-content: space-between;
}

.header-left {
  display: flex;
  align-items: center;
  flex: 1;
  min-width: 0;
}

.header-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex-shrink: 0;
}

.unread-badge {
  min-width: 40rpx;
  height: 40rpx;
  padding: 0 10rpx;
  border-radius: 999rpx;
  background: #ff3b30;
  display: flex;
  align-items: center;
  justify-content: center;
}

.unread-text {
  font-size: 22rpx;
  color: #fff;
  line-height: 1;
}

.post-delete {
  font-size: 26rpx;
  color: #e53935;
  padding: 10rpx 14rpx;
  border-radius: 10rpx;
  background: #ffebee;
}

.post-edit {
  font-size: 26rpx;
  color: #1296db;
  padding: 10rpx 14rpx;
  border-radius: 10rpx;
  background: #e3f2fd;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-color: #eee;
}

.user-info {
  display: flex;
  flex-direction: column;
  min-width: 0;
}

.username {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.card-content {
  margin-bottom: 20rpx;
}

.category-tag {
  color: #1296db;
  font-weight: 500;
  margin-right: 10rpx;
}

.content-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  text-align: justify;
}

.link-text {
  color: #1296db;
  text-decoration: underline;
}

.card-images {
  margin-bottom: 20rpx;
}

.image-grid {
  display: grid;
  gap: 10rpx;
}

.grid-1 {
  grid-template-columns: 1fr;
}
.grid-1 .post-image {
  width: 400rpx;
  height: 400rpx;
}

.grid-2 {
  grid-template-columns: repeat(2, 1fr);
}
.grid-2 .post-image {
  width: 100%;
  aspect-ratio: 1;
}

.grid-3 {
  grid-template-columns: repeat(3, 1fr);
}
.grid-3 .post-image {
  width: 100%;
  aspect-ratio: 1;
}

.post-image {
  border-radius: 8rpx;
  background-color: #f0f0f0;
}

.card-footer {
  display: flex;
  justify-content: flex-end;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.action-item {
  display: flex;
  align-items: center;
  margin-left: 40rpx;
}

.action-text {
  font-size: 26rpx;
  color: #666;
}

.loading-tip {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

.comment-mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
}

.comment-panel {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 70vh;
  background: #fff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  z-index: 1000;
  display: flex;
  flex-direction: column;
}

.comment-header {
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.comment-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.comment-close {
  font-size: 46rpx;
  color: #999;
  line-height: 1;
}

/* Comment List Styles */
.comment-list {
  flex: 1;
  padding: 20rpx 30rpx;
}

.comment-empty {
  text-align: center;
  color: #999;
  padding: 40rpx 0;
}

.comment-item {
  display: flex;
  align-items: flex-start;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #fcfcfc;
}

.comment-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 8rpx;
  background: #eee;
  margin-right: 20rpx;
}

.comment-body {
  flex: 1;
  min-width: 0;
  padding-right: 10rpx;
}

.comment-header-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.comment-author {
  font-size: 28rpx;
  font-weight: 600;
  color: #576b95;
}

.comment-time {
  font-size: 22rpx;
  color: #999;
}

.comment-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 16rpx;
  display: block;
  text-align: justify;
}

.comment-actions {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.comment-action-item {
    margin-left: 30rpx;
    font-size: 24rpx;
    color: #576b95;
    display: flex;
    align-items: center;
}
