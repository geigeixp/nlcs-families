.post-container {
  padding: 20rpx;
  padding-bottom: 50rpx;
  background: #f6f6f6;
  min-height: 100vh;
}

.gated-tip {
  background: #fff3bf;
  color: #7a5d00;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.gated-btn {
  background: #fff;
  color: #1296db;
  font-size: 24rpx;
}

.input-area {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.text-input {
  width: 100%;
  font-size: 30rpx;
  line-height: 1.6;
  color: #333;
}

.category-area {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.category-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.category-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.category-item {
  padding: 12rpx 18rpx;
  border-radius: 999rpx;
  background: #f5f7fa;
  color: #555;
  font-size: 26rpx;
}

.category-item.active {
  background: #e3f2fd;
  color: #1296db;
  font-weight: 600;
}

.image-area {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 24rpx;
}

.image-wrap {
  display: inline-block;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
}

.selected-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  background: #eee;
}

.submit-btn {
  background: #1296db;
  color: #fff;
  border-radius: 16rpx;
}
