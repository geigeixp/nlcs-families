.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
  position: relative;
  overflow: hidden;
}

.header::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 400rpx;
  height: 400rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.header::after {
  content: '';
  position: absolute;
  bottom: -30%;
  left: -10%;
  width: 300rpx;
  height: 300rpx;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 50%;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  position: relative;
  z-index: 1;
}

.avatar-wrap {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 30rpx;
  background: linear-gradient(135deg, #fff 0%, #f0f0f0 100%);
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
}

.avatar {
  width: 100%;
  height: 100%;
}

.info-text {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 40rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.role {
  font-size: 24rpx;
  color: #fff;
  background-color: rgba(255, 255, 255, 0.25);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  align-self: flex-start;
  backdrop-filter: blur(10rpx);
  font-weight: 500;
}

.contact-info-card {
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-top: 10rpx;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  position: relative;
  z-index: 1;
}

.contact-row {
  display: flex;
  font-size: 26rpx;
  margin-bottom: 12rpx;
  line-height: 1.6;
}

.contact-row:last-child {
  margin-bottom: 0;
}

.contact-label {
  color: rgba(255, 255, 255, 0.8);
  width: 100rpx;
  flex-shrink: 0;
  font-weight: 500;
}

.contact-value {
  color: #fff;
  flex: 1;
  word-break: break-all;
}

