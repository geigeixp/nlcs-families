.menu-list {
  background-color: #fff;
  border-radius: 20rpx;
  margin: 0 20rpx 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.06);
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
}

.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 28rpx 16rpx;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #f6f9fc 0%, #fff 100%);
  transition: all 0.2s;
  border: 2rpx solid transparent;
  position: relative;
}

.menu-item:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.12);
  border-color: rgba(102, 126, 234, 0.2);
}

.menu-item:last-child {
  border-bottom: none;
}

.margin-top {
  margin-top: 0;
  border-top: none;
  grid-column: span 3;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 30rpx;
}

.item-left {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.iconfont {
  font-size: 56rpx;
  margin-bottom: 12rpx;
  width: auto;
  text-align: center;
  filter: drop-shadow(0 2rpx 4rpx rgba(0,0,0,0.1));
}

.icon-list::before { content: "üìã"; }
.icon-child::before { content: "üë∂"; }
.icon-settings::before { content: "‚öôÔ∏è"; }
.icon-message::before { content: "üîî"; }

.menu-text {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  text-align: center;
}

.margin-top .menu-text {
  font-size: 30rpx;
}

.arrow {
  color: #ccc;
  font-size: 30rpx;
  font-family: monospace;
  position: static;
}

.admin-entry {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 0 20rpx 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.06);
}

.section-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 24rpx;
  font-weight: 600;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 28rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 3rpx;
}

.input-group {
  display: flex;
  align-items: center;
}

.admin-input {
  flex: 1;
  height: 88rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  margin-right: 16rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.admin-input:focus {
  background-color: #fff;
  border-color: #667eea;
}

.btn-switch {
  font-size: 28rpx;
  padding: 0 32rpx;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: none;
  border-radius: 12rpx;
}

.btn-exit {
  width: 100%;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
  border: none;
  border-radius: 12rpx;
}

.admin-actions {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.btn-admin {
  width: 100%;
  position: relative;
  overflow: visible;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: none;
  border-radius: 12rpx;
}

.badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background-color: #ff4d4f;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 10rpx;
  border-radius: 20rpx;
  min-width: 30rpx;
  text-align: center;
  line-height: 1.2;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.2);
}

.red-dot {
  width: 16rpx;
  height: 16rpx;
  background-color: #ff4d4f;
  border-radius: 50%;
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  border: 2rpx solid #fff;
  box-shadow: 0 2rpx 8rpx rgba(255, 77, 79, 0.5);
}
